# Przykładowa konfiguracja Streamlit secrets
# Skopiuj ten plik do .streamlit/secrets.toml i wypełnij prawdziwymi danymi

# ID arkusza Google Sheets
SPREADSHEET_ID = "twoj_id_arkusza_google_sheets"

# Dane uwierzytelniające Google Service Account
[gsheets]
type = "service_account"
project_id = "twoj-projekt-id"
private_key_id = "klucz-prywatny-id"
private_key = "-----BEGIN PRIVATE KEY-----\ntwoj_klucz_prywatny\n-----END PRIVATE KEY-----\n"
client_email = "twoj-email@twoj-projekt.iam.gserviceaccount.com"
client_id = "client-id"
auth_uri = "https://accounts.google.com/o/oauth2/auth"
token_uri = "https://oauth2.googleapis.com/token"
auth_provider_x509_cert_url = "https://www.googleapis.com/oauth2/v1/certs"
client_x509_cert_url = "https://www.googleapis.com/service_accounts/v1/metadata/x509/twoj-email%40twoj-projekt.iam.gserviceaccount.com"
universe_domain = "googleapis.com"

